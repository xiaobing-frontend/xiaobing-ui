{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": {
      "art": ["src/components/index.ts"],
      "@util": ["src/components/_util"]
    },
    "allowJs": false,
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/components"],
  "exclude": ["node_modules", "**/__tests__/**", "**/demo/**", "lib", "es"]
}
